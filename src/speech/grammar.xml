<grammar version="1.0" xml:lang="en-US" root="root" xmlns="http://www.w3.org/2001/06/grammar">

  <rule id="root">
    <one-of>
      <item> <ruleref uri="#command" /> </item>
      <item> <ruleref uri="#incantation" /> </item>
    </one-of>
  </rule>

  <rule id="command">
    <one-of>
      <item> suppress voodoo </item> <!-- Disable sending recognised speech to Voodoo Server. -->
      <item> awaken voodoo </item> <!-- Enable sending recognised speech to Voodoo Server. -->
      <item> attune voodoo </item> <!-- Begin incanting. -->
      <item> fizzle </item> <!-- Abort incantation. -->
      <item> seal </item> <!-- Confirm short incantation. -->
      <item> <ruleref uri="#trigger" /> </item>
    </one-of>
  </rule>

  <rule id="trigger">
    <item> cast </item>
    <one-of>
      <item> acid bolt </item>
      <item> crystal bolt </item>
    </one-of>
  </rule>

  <rule id="incantation">
    <ruleref uri="#property" />
    <item> of </item>
    <ruleref uri="#source" />
  </rule>

  <rule id="property">
    <one-of>
      <item> fiber </item>
      <item> aspect </item>
      <item> aether </item>
      <item> essence </item>
      <item> grain </item>
      <item> pinch </item>
      <item> hint </item>
      <item> essence </item>
      <item> juice </item>
      <item> extract </item>
      <item> flesh </item>
    </one-of>
  </rule>

  <rule id="source">
    <one-of>
      <item> wyrm skin </item>
      <item> flight </item>
      <item> gemstone </item>
      <item> pyre </item>
      <item> salt </item>
      <item> embers </item>
      <item> glass </item>
      <item> harvest </item>
      <item> fungi </item>
      <item> fowl </item>
    </one-of>
  </rule>

</grammar>
